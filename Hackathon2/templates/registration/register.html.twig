{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <h1>Register</h1>
    <div class="body2">
        <ul>

    {{ form_start(registrationForm) }}
      <li> {{ form_row(registrationForm.email) }}</li>
         <li>   {{ form_row(registrationForm.plainPassword, {
            label: 'Password'
        }) }}</li>
          <li>  {{ form_row(registrationForm.agreeTerms) }}</li>

            <button type="submit" class="btn">Register</button>
    <li>{{ form_end(registrationForm) }}</li>
        </ul>
    </div>
{% endblock %}
